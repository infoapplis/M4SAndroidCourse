<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androidcourse.dev.helloworld.HelloWorld">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello El Hadji Lamine Biaye"
        android:id="@+id/txtname"
        android:textStyle="italic"
        android:textSize="@dimen/abc_text_size_title_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome in this Android course"
        android:id="@+id/txtwlcm"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="italic"
        android:layout_below="@+id/txtand"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="And"
        android:id="@+id/txtand"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="italic"
        android:layout_below="@+id/txtname"
        android:layout_alignParentStart="true" />

</RelativeLayout>
