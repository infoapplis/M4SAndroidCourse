<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androidcourse.dev.menuproject.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btnsms"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="AfficheSMS"
        android:drawableTop="@drawable/sms" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE"
        android:id="@+id/btnphone"
        android:layout_below="@+id/btnsms"
        android:layout_alignParentStart="true"
        android:onClick="AfficheTel"
        android:drawableTop="@drawable/tel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/btnweb"
        android:layout_below="@+id/btnphone"
        android:layout_alignParentStart="true"
        android:onClick="AfficheWeb"
        android:drawableTop="@drawable/web"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/btnmap"
        android:layout_below="@+id/btnweb"
        android:layout_alignParentStart="true"
        android:onClick="AfficheCarte"
        android:drawableTop="@drawable/map"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/btnshare"
        android:layout_below="@+id/btnmap"
        android:layout_alignParentStart="true"
        android:onClick="AffichePartager"
        android:drawableTop="@drawable/share"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW ACTIVITY"
        android:id="@+id/btnnewa"
        android:layout_below="@+id/btnshare"
        android:layout_alignParentStart="true"
        android:onClick="AfficheNewActivity"
        android:drawableTop="@drawable/new_folder"/>
</RelativeLayout>

</ScrollView>
